<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_columnWeight="1"
    android:orientation="vertical"
    android:background="@drawable/box_background"
    android:padding="12dp"
    android:layout_margin="8dp">

    <TextView
        android:id="@+id/achievementTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="🏅 Budget Hero"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/achievementDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stay under budget for a month"
        android:textSize="14sp"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/achievementTip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Keep tracking your expenses to unlock this achievement!"
        android:textSize="12sp"
        android:layout_marginTop="4dp" />
</LinearLayout>
